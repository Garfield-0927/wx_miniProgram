.goods_item{
    display: flex;
    border-bottom: 1px solid #ccc;
}

.goods_img{
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
}

.goods_img image{
    width: 70%;
}

.goods_info{
    flex: 3;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.goods_info h2{
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.goods_info h3{
    color: var(--themeColor);
    font-size: 40rpx;
}